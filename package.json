{
  "name": "react-loader-spinner",
  "version": "4.0.0",
  "description": " react-spinner-loader provides simple React.js spinner component which can be implemented for async wait operation before data load to the view.",
  "unpkg": "dist/index.js",
  "jsdelivr": "dist/index.js",
  "main": "dist/index.js",
  "author": {
    "name": "Mohan Upadhyay",
    "url": "https://mohanpd.com.np"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mhnpd/react-loader-spinner"
  },
  "homepage": "https://mhnpd.github.io/react-loader-spinner/",
  "keywords": [
    "react-component",
    "loader",
    "spinner",
    "react"
  ],
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build:src": "babel -d lib src --extensions .js,.ts,.jsx,.tsx --copy-files --ignore './pages",
    "build:src:watch": "babel --watch -d lib src --extensions .js,.ts,.jsx,.tsx",
    "build": "yarn build:src",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint --ext js,jsx,ts,tsx src test",
    "clean": "rm -rf lib types",
    "test": "mocha \"test/**/*.unit.{jsx,tsx,ts,js}\"",
    "dev": "docz dev",
    "docz:build": "docz build",
    "docz:serve": "docz build && docz serve"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/node": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@babel/register": "^7.16.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "docz": "^2.3.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "react": "16.8.0",
    "react-dom": "16.8.0",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "prop-types": "^15.8.0"
  },
  "packageManager": "yarn@3.1.1"
}
